<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 mx-auto">
      <h1>Burgers</h1>
    </span>
  </div>
</nav>

<div class="mt-5 mb-5 text-center">
  <img class="w-25 h-25" src="/assets/imgs/burger.png">
</div>

<div class="container-fluid">
  <div class="card">
    <div class="card-header mx-auto">
      <h2>Add a Burger</h2>
    </div>
    <div class="card-body mx-auto">
      <form id="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="devoured" value="0" id="available" checked>
            <label class="form-check-label" for="flexRadioDefault2">Available</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="devoured" value="1" id="devoured">
            <label class="form-check-label" for="flexRadioDefault1">Devoured!</label>
          </div>
        </div>

        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>



<div class="container text-center">
  <div class="row">
    <div class="col-sm">
      <h2>Available Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Burgers that have been devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>